{
  "name": "razorpay-mcp",
  "version": "0.1.0",
  "description": "Razorpay MCP server",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "tsup --clean",
    "format": "prettier --write .",
    "lint": "prettier --check ."
  },
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.cjs"
    }
  },
  "bin": {
    "razorpay-mcp": "./dist/stdio.js"
  },
  "keywords": [
    "razorpay",
    "mcp",
    "server",
    "payment"
  ],
  "author": "LightHeads",
  "license": "Apache-2.0",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "razorpay": "^2.9.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@total-typescript/tsconfig": "^1.0.4",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "tsx": "^4.19.0"
  }
}
